<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".application.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DicodingStoryApp"
        tools:targetApi="31">

        <activity
            android:name=".ui.add_story_activity.AddStoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.settings_activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.detail_activity.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.stories_activity.StoriesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register_activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login_activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.camera.CameraActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash_activity.CustomSplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>